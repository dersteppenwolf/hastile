name:                hastile
version:             0.1.0.0
synopsis:            Tile cache for Mapbox Vector Tiles
description:         Please see README.md
homepage:            https://github.com/vlc/hastile#readme
license:             BSD3
license-file:        LICENSE
author:              Andrew McCluskey
maintainer:          andrew.mccluskey@veitchlister.com.au
copyright:           Andrew McCluskey
category:            Web
build-type:          Simple
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Controllers
                     , DB
                     , Routes
                     , Server
                     , Tile
                     , Types
  build-depends:       base >= 4.8 && < 5
                     , aeson
                     , aeson-pretty
                     , bytestring
                     , containers
                     , geojson
                     , hasql
                     , hasql-pool
                     , here
                     , http-types
                     , http-media
                     , lens
                     , list-t
                     , mtl
                     , optparse-generic
                     , servant
                     , servant-server
                     , stm-containers
                     , text
                     , time
                     , transformers
                     , wai
                     , word8
                     , zellige
  default-language:    Haskell2010
  ghc-options:       -Wall -Werror -O2

executable hastile
  hs-source-dirs:      app
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N -Wall -Werror -O2
  build-depends:       aeson
                     , base
                     , bytestring
                     , containers
                     , filepath
                     , hastile
                     , optparse-generic
                     , text
                     , hasql-pool
                     , servant-server
                     , stm-containers
                     , transformers
                     , wai
                     , wai-cors
                     , warp
  default-language:    Haskell2010

test-suite hastile-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , aeson
                     , bytestring
                     , containers
                     , directory
                     , hastile                     
                     , hspec
                     , lens
                     , QuickCheck
                     , temporary
                     , text                     
                     , vectortiles
                     , zellige
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N -Wall -Werror -O2
  other-modules:        TileSpec
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/vlc/hastile
